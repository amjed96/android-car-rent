<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    tools:context=".car_details">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:orientation="vertical"
        android:padding="15dp"
        android:layout_margin="10dp"
        android:gravity="top"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:layout_marginTop="40dp"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="20dp"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="320dp">
            <LinearLayout
                android:padding="20dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:textColor="@color/black"
                    android:textSize="30dp"
                    android:fontFamily="@font/poppins_black"
                    android:text="Citroen C3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></TextView>
                <TextView
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:text="2021 - Edition"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></TextView>

                <ImageView
                    android:src="@drawable/citroen_c3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                </ImageView>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:gravity="center_horizontal"
            app:cardCornerRadius="20dp"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="320dp">
            <LinearLayout
                android:padding="20dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <GridLayout
                    android:gravity="center_horizontal"
                    android:columnCount="3"
                    android:rowCount="3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="113dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_baseline_offline_bolt_24">
                    </ImageView>

                    <ImageView
                        android:layout_width="113dp"
                        android:layout_height="50dp"
                        android:src="@drawable/steericon">
                    </ImageView>
                    <ImageView
                        android:layout_width="113dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_baseline_speed_24">
                    </ImageView>

                    <TextView
                        android:textSize="12dp"
                        android:text="Transmission"
                        android:layout_marginLeft="20dp"></TextView>
                    <TextView
                        android:textSize="12dp"
                        android:text="Engine"
                        android:layout_marginLeft="38dp"></TextView>
                    <TextView
                        android:textSize="12dp"
                        android:text="Top Speed"
                        android:layout_marginLeft="28dp"></TextView>

                    <TextView
                        android:textColor="@color/black"
                        android:fontFamily="@font/poppins_black"
                        android:textSize="16dp"
                        android:text="Automatic"
                        android:layout_marginLeft="12dp">
                    </TextView>
                    <TextView
                        android:textColor="@color/black"
                        android:fontFamily="@font/poppins_black"
                        android:textSize="16dp"
                        android:text="3 Cyl-1.2 liter"
                        android:layout_marginLeft="3dp">
                    </TextView>
                    <TextView
                        android:textColor="@color/black"
                        android:fontFamily="@font/poppins_black"
                        android:textSize="16dp"
                        android:text="300 Km/h"
                        android:layout_marginLeft="18dp">
                    </TextView>

                </GridLayout>

                <TextView
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/black"
                    android:text="Equipped with ABS"
                    android:layout_width="wrap_content"
                    android:layout_height="110dp">
                </TextView>
                <View
                    android:layout_marginBottom="14dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_gravity="bottom"
                            android:layout_marginLeft="12dp"
                            android:fontFamily="@font/poppins_regular"
                            android:textColor="@color/black"
                            android:text="Prix"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        </TextView>
                        <TextView
                            android:layout_gravity="bottom"
                            android:layout_marginLeft="12dp"
                            android:fontFamily="@font/poppins_black"
                            android:textColor="@color/black"
                            android:text="$350"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        </TextView>

                    </LinearLayout>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="160dp"
                        android:text="Rent now"
                        app:backgroundTint="@color/blue"></Button>

                </LinearLayout>



            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>